{
  "scripts": {
    "start:py": "cd ./ServicePy && pnpm run start",
    "dev:py": "cd ./ServicePy && pnpm run dev",

    "start:ts": "cd ./ServiceTs && pnpm run start",
    "dev:ts": "cd ./ServiceTs && pnpm run dev",

    "start:rs": "cd ./ServiceRs && pnpm run start",
    "dev:rs": "cd ./ServiceRs && pnpm run dev",

    "start:windows": "cd scripts && run.bat",
    "start": "sh scripts/run.sh",

    "setup": "cd ./ServiceTs && pnpm i && cd ../ServicePy && pip install -r requirements.txt && cd ../ServiceRs && cargo build --release"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^3.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
